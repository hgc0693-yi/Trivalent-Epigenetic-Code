  PATH="/home/yi-maru/Software/homer/bin:$PATH"
  /home/yi-maru/Software/homer/bin/annotatePeaks.pl ES_1_H1_tagdir/regions.txt hg19 -d ES_1_H1_tagdir > ES_1_H1_tagdir/peak_annotation_result.txt &






